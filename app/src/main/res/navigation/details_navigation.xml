<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_navigation"
    app:startDestination="@id/detailsFragment">

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.javlonrahimov1212.apod.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_detailsFragment_to_imageFullscreenFragment"
            app:destination="@id/imageFullscreenFragment">
            <argument
                android:name="apodUrl"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/imageFullscreenFragment"
        android:name="com.javlonrahimov1212.apod.ui.fullscreen_image.ImageFullscreenFragment"
        android:label="fragment_image_fullscreen"
        tools:layout="@layout/fragment_image_fullscreen">
        <argument
            android:name="apodUrl"
            app:argType="string" />
    </fragment>
</navigation>